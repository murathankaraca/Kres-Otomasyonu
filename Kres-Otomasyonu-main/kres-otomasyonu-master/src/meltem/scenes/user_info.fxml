<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="1.0" styleClass="app" vgap="5.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="meltem.controllers.UserInfoController">
   <HBox alignment="CENTER" spacing="40.0" GridPane.vgrow="ALWAYS">
      <children>
          <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
              <image>
                  <Image backgroundLoading="true" url="@../icons/user.png" />
              </image>
          </ImageView>
          <Text fill="WHITE" text="Kullanıcı Bilgileri" HBox.hgrow="ALWAYS">
            <font>
               <Font size="24.0" />
            </font></Text>
      </children>
   </HBox>
    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-border-radius: 5px;" GridPane.rowIndex="1">
        <padding>
            <Insets left="25.0" right="25.0" />
        </padding>
        <BorderPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="50.0" GridPane.vgrow="ALWAYS">
            <left>
                <Text styleClass="body2" text="Kullanıcı Numarası" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font></Text>
            </left>
            <right>
                <Text fx:id="txtUserId" BorderPane.alignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font></Text>
            </right>
        </BorderPane>
        <BorderPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="200.0" GridPane.vgrow="ALWAYS">
            <left>
                <Text styleClass="body2" text="Kullanıcı Adı" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font></Text>
            </left>
            <right>
                <Text fx:id="txtUserName" BorderPane.alignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font></Text>
            </right>
        </BorderPane>
        <BorderPane maxHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" GridPane.vgrow="ALWAYS">
            <left>
                <Text styleClass="body2" text="Kullanıcı Şifresi" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font></Text>
            </left>
            <right>
                <Text fx:id="txtPw" BorderPane.alignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font></Text>
            </right>
        </BorderPane>
        <BorderPane maxHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" GridPane.vgrow="ALWAYS">
            <left>
                <Text styleClass="body2" text="Kullanıcı Yetkisi" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font></Text>
            </left>
         <right>
            <Text fx:id="userAuth" BorderPane.alignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font></Text>
         </right>
        </BorderPane>
    </VBox>
    <FlowPane alignment="CENTER" hgap="25" GridPane.rowIndex="2">
        <Button onAction="#goBack" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/arrow_left.png" />
                    </image>
                </ImageView>
            </graphic>
         <font>
            <Font size="18.0" />
         </font>
            Geri Dön
        </Button>
    </FlowPane>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="20.0" />
        <RowConstraints maxHeight="1.7976931348623157E308" percentHeight="60.0" valignment="CENTER" vgrow="ALWAYS" />
        <RowConstraints percentHeight="20.0" />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
